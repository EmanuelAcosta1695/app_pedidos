<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".PresentacionActivity"
    android:background="@color/textoInicio">


    <VideoView
        android:id="@+id/videoView1"
        android:layout_width="450dp"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="20dp"
        android:padding="10dp">
    </VideoView>

    <LinearLayout
        android:id="@+id/ButonsLayout1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="220dp"
        android:gravity="center"
        android:layout_alignParentTop="true">

        <ImageButton android:id="@+id/play1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/play"
            android:onClick="iniciar1"/>

        <ImageButton android:id="@+id/pause1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/pause"
            android:onClick="pausar1"/>

        <ImageButton android:id="@+id/stop1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/stop"
            android:onClick="detener1"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textoEmpresa"
        android:layout_width="260dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:gravity="center"
        android:padding="5dp"
        android:text=" ''Somos una empresa que se dedica a la venta de panificados desde 2002.''"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:fontFamily="@font/milea_lover"/>

</RelativeLayout>
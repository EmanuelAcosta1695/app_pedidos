<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/textoInicio"
    tools:context=".VerProductActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@color/textoInicio"
        app:cardCornerRadius="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/item_foto"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@color/textoInicio"
            android:radius="5dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/pan"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/viewNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_foto"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@color/botonInicio"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/viewPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/viewNombre"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:background="@drawable/textos"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtCantidad"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:textAlignment="center"
        android:hint="Cantidad"
        android:digits="0123456789"
        android:inputType="number" />

    <TextView
        android:id="@+id/aclaracionUnidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtCantidad"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="10dp"
        android:background="@drawable/textos"
        android:textStyle="bold" />


    <Button
        android:id="@+id/btnA単adir"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="10dp"
        android:text="@string/a単adirCarrito"
        app:backgroundTint="@color/botonInicio" />

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_below="@+id/btnA単adir"
        android:text="@string/volver"
        android:textSize="10dp"
        app:backgroundTint="@color/botonInicio"></Button>



